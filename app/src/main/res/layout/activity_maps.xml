<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:cameraTargetLat="-7.257983"
        map:cameraTargetLng="112.751741"
        map:cameraZoom="13"
        tools:context="com.lynx.warung.MapsActivity" />
    <at.markushi.ui.CircleButton
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        map:cb_color="#3990fa"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/myLocation"
        android:src="@drawable/ic_add_circle_white_24dp"
        android:layout_alignParentRight="true"/>
    <at.markushi.ui.CircleButton
        android:id="@+id/myLocation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        map:cb_color="#f5f5f5"
        android:layout_margin="10dp"
        android:src="@drawable/ic_my_location_blue_600_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <at.markushi.ui.CircleButton
        android:id="@+id/refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        map:cb_color="#3990fa"
        android:layout_margin="10dp"
        android:src="@drawable/ic_refresh_white_18dp"
        android:layout_alignParentRight="true"/>
    <at.markushi.ui.CircleButton
        android:id="@+id/filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        map:cb_color="#ffff"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_filter_list_blue"
        android:layout_toLeftOf="@+id/refresh"/>
</RelativeLayout>
